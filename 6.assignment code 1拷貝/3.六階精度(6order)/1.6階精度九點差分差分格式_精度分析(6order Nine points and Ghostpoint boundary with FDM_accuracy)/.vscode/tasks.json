{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "-Wall",
                "-Wextra",
                "-std=c++11",
                "-O2",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "使用 clang++ 編譯當前C++文件"
        },
        {
            "type": "shell",
            "label": "Run 9nine program",
            "command": "${fileDirname}/9nine",
            "args": [],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "test",
            "dependsOn": "C/C++: clang++ build active file",
            "detail": "運行 9nine 程序"
        }
    ]
}